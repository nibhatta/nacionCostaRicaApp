<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/health_height"
    android:background="@color/health_color_component"
    android:padding="@dimen/padding_separate">

    <TextView
        android:id="@+id/approachTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENFOQUE "
        android:textColor="@android:color/white"/>

    <ImageView
        android:id="@+id/approachImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/picture_size02"
        android:layout_below="@+id/approachTextView"
        android:layout_marginLeft="@dimen/margin_separate"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/approachImageView"
        android:background="@android:color/white"
        android:padding="@dimen/padding_separate">

        <TextView
            android:id="@+id/approachSectionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dummy_text_date"
            android:textSize="@dimen/font_section_tablet"
            />

        <TextView
            android:id="@+id/approachTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dummy_text_title"
            android:textSize="@dimen/font_title_tablet"
            />

        <TextView
            android:id="@+id/approachSummaryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dummy_text_summary"
            android:textSize="@dimen/font_summary_tablet"
            android:layout_marginTop="@dimen/margin_separate"/>

    </LinearLayout>

</RelativeLayout>