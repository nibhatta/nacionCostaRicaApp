<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/article_news_width_tablet"
    android:layout_height="@dimen/article_news_height_tablet"
    android:layout_weight="1"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/articleNewsSectionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummy_text_date"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/articleNewsTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/article_news_title_height_tablet"
        android:text="@string/dummy_text_title"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/articleNewsSummaryTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/dummy_text_summary"
            android:textSize="@dimen/summary_article_size"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/articleNewsImageView"
            android:layout_width="0dp"
            android:layout_height="@dimen/image_height_article"
            android:src="@drawable/module"
            android:layout_weight="1"
            android:scaleType="fitXY"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="@dimen/margin_separate"
        android:layout_alignParentBottom="true"/>

</LinearLayout>