<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/entertainment_height"
    android:padding="@dimen/padding_separate"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:padding="@dimen/padding_separate">

       <ImageView
           android:id="@+id/entertainmentImageView"
           android:layout_width="@dimen/entertainment_image_width"
           android:layout_height="match_parent"
           android:src="@drawable/picture_size02"
           android:layout_alignParentLeft="true"/>

        <TableLayout
            android:id="@+id/entertainmentTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:shrinkColumns="*"
            android:padding="@dimen/padding_separate"
            android:layout_toRightOf="@+id/entertainmentImageView">

            <TableRow>
                <ImageView
                    android:layout_width="@dimen/entertainment_cell_width"
                    android:layout_height="@dimen/entertainment_cell_height"
                    android:src="@drawable/picture_size02"/>

                <TextView
                    android:layout_width="@dimen/entertainment_cell_width"
                    android:layout_height="@dimen/entertainment_cell_height"
                    android:text="@string/dummy_text_title"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="@dimen/entertainment_cell_width"
                    android:layout_height="@dimen/entertainment_cell_height"
                    android:text="@string/dummy_text_title"/>

                <ImageView
                    android:layout_width="@dimen/entertainment_cell_width"
                    android:layout_height="@dimen/entertainment_cell_height"
                    android:src="@drawable/picture_size02"/>
            </TableRow>
        </TableLayout>

    </RelativeLayout>



</RelativeLayout>